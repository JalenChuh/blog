<% if((is_post() || is_page()) && theme.highlight.enable){ %>
  <%- js_ex(theme.static_prefix.prettify, "/prettify.min.js") %>
  <script>
    $(document).ready(function () {
      $('pre:not(.mermaid)').addClass('prettyprint  <%- config.highlight.line_number ? 'linenums' : '' %>');
      prettyPrint();
    })
  </script>
<% } %>
