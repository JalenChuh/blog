<%
page.layout = "links"
page.title = theme.links.title || __('links.title')
page.subtitle = theme.links.subtitle || __('links.subtitle')
page.banner_img = theme.links.banner_img
page.banner_img_height = theme.links.banner_img_height
page.banner_mask_alpha = theme.page404.banner_mask_alpha
%>

<h4 class="note note-success">🍭 身边的大佬们</h4>
<div class="row links">
	<% for(const each of theme.links.defaultlinks) { %>
		<% if (!each.title || !each.link) continue %>
		<div class="card col-lg-4 col-md-6 col-sm-12">
			<a href="https://<%= url_for(each.link) %>" class="card-body hover-with-bg" target="_blank" rel="noopener">
			  <div class="card-content">
				<div class="link-avatar my-auto">
				  <img src="https://rmt.dogedoge.com/fetch/royce/storage/links/<%= each.title %>.jpg?fmt=webp&w=100&h=100&q=100" alt="<%= each.title %>" />
				</div>
				<div class="link-text">
				  <div class="link-title"><%- each.title %></div>
				  <div class="link-intro"><%- each.intro %></div>
				</div>
			  </div>
			</a>
		  </div>
	<% } %>
</div>

<h4 class="note note-primary">⛅️ 五湖四海的朋友们</h4>
<div class="row links">
	<% for(const each of theme.links.friendslinks) { %>
		<% if (!each.title || !each.link) continue %>
		<div class="card col-lg-4 col-md-6 col-sm-12">
			<a href="https://<%= each.link %>" class="card-body hover-with-bg" target="_blank" rel="noopener">
			  <div class="card-content">
				<div class="link-avatar my-auto">
				  <img src="https://rmt.dogedoge.com/fetch/royce/storage/links/<%= each.title %>.jpg?fmt=webp&w=100&h=100&q=100" alt="<%= each.title %>" />
				</div>
				<div class="link-text">
				  <div class="link-title"><%- each.title %></div>
				  <div class="link-intro"><%- each.intro %></div>
				</div>
			  </div>
			</a>
		  </div>
	<% } %>
</div>
<div class="mt-5 markdown-body">
	<%- page.content %>
</div>